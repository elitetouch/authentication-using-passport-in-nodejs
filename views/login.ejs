<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</i>
            </h1>
            <%- include ('partials/message') %>
                <form action="/users/login" method="post">

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter Email" value="<% typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="<% typeof password != 'undefined' ? password : '' %>">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <p class="lead mt-4">No Account? <a href="/users/register">Register</a></p>
        </div>
    </div>
</div>